---
description: "Invoke Step Functions workflow"
schemaVersion: "0.3"
assumeRole: "{{ AutomationAssumeRole }}"
parameters:
  StateMachineArn:
    type: "String"
    description: "The ARN of the Step Functions state machine to invoke."
  Input:
    type: "String"
    description: "The input data to pass to the state machine."
    default: "{}"
mainSteps:
- name: "InvokeStepFunctionsWorkflow"
  action: "aws:executeAwsApi"
  inputs:
    Service: "states"
    Api: "StartExecution"
    StateMachineArn: "{{ StateMachineArn }}"
    Input: "{{ Input }}"
